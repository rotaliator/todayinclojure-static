<div>
  <div class="mb5">
    <time>{{today}}</time>
    <div>
      <ul class="list pl0">
        {{#posts}}
          <li class="mb3">
            <div class="mb1">
              <a class="f4 near-black link underline-hover" href="{{url}}">
                {{title}}
              </a>
            </div>

            <div>
              <a class="mr2 gray link underline-hover" href="{{source-url}}">
                <span>{{source}}</span>
              </a>

              <span class="gray mr2">{{author}}</span>

              <a class="link gray underline-hover mr2" href="{{comments-url}}">
                {{comments}} comments
              </a>
            </div>
          </li>
        {{/posts}}
      </ul>
    </div>
  </div>
</div>