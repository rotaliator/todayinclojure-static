<div>
  <div class="mb5">
    <time>{{today}}</time>
    <div>
      <ul class="list pl0">
        {{#posts}}
          <li class="mb3">
            <div class="mb1">
              <a class="f4 near-black link underline-hover" href="{{url}}">
                {{title}}
              </a>
            </div>

            <div>
              <a class="mr2 gray link underline-hover" href="{{source-url}}">
                <span>{{source}}</span>
              </a>

              <span class="gray mr2">
                {{#author-url}}
                  <a href="{{author-url}}" class="link gray underline-hover">{{author}}</a>
                {{/author-url}}
                {{^author-url}}
                  {{author}}
                {{/author-url}}
              </span>

              {{#comments}}
                <a class="link gray underline-hover mr2" href="{{comments-url}}">
                  {{comments}} comments
                </a>
              {{/comments}}

              {{#answers}}
                <span class="gray mr2">
                  {{answers}}
                </span>
              {{/answers}}

              {{#replies}}
                <span class="gray mr2">
                  {{replies}}
                </span>
              {{/replies}}
            </div>
          </li>
        {{/posts}}
      </ul>
    </div>
  </div>
</div>